@model IEnumerable<Rent>
@{
    ViewData["Title"] = "Tyutor Page";
    int intson = 0;
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>t/r</th>
                        <th>Shartnoma raqami</th>
                        <th>Talaba F.I.O</th>
                        <th>Boshlanish sanasi</th>
                        <th>Tugash sanasi</th>
                        <th>Fakulteti</th>
                        <th>Ariza sanasi</th>
                        <th>Boshqaruv</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        intson += 1;
                        <tr>
                            <td>
                                @intson
                            </td>
                            <td>@item.Rent_id</td>
                            <td>@item.Tenant_fullname</td>
                            <td>@item.Start_date.Substring(0,10)</td>
                            <td>@item.End_date.Substring(0,10)</td>
                            <td>@item.Faculty</td>
                            <td>@item.Wrote_date</td>
                            <td>
                                <a target="_blank" href="https://ijara.soliq.uz/public-contract-view/@item.Rent_id/@item.Start_date.Substring(0,10)/@item.End_date.Substring(0,10)" class="btn btn-link btn-sm btn-rounded text-success"><i class="fa fa-edit" aria-hidden="true"></i>View</a>
                                <a href="#" class="btn btn-link btn-sm btn-rounded"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                <form class="btn btn-sm-1" href="#">
                                    <button type="submit" class="btn btn-link btn-rounded text-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

